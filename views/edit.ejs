<%- include("partials/header") %>
  <%- include("partials/nav") %>


    <div class="flex items-center justify-center">
      <h1 class="mt-10 py-2 text-4xl font-semibold border-b-[3px] border-purple-600">Edit Book</h1>
    </div>

    <div class="max-w-screen-xl flex mt-10 flex-wrap items-center justify-between mx-auto p-4">

      <div class="rounded w-[50%] h-[100vh] border-2">
        <div
          class="h-[100%] text-center font-semibold text-white flex flex-col items-center justify-between  bg-[url(/images/<%=book.poster %>)] bg-cover rounded">
          <div class="p-5">
            <p class="text-yellow-200 bg-gray-700">"<%= book.booktitle%>"</p>
            <h1 class="text-4xl mt-20 bg-gray-200 text-black">'<%= book.bookname%>'</h1>
          </div>
          <div class="flex flex-col items-center text-center">
            <h3 class="text-red-800 font-bold text-lg bg-gray-200">-<%=book.authorname%>
            </h3>
            <p class="px-10 w-[70%] bg-gray-400">
              <%=book.description%>
            </p>
          </div>
          <div class="flex items-center justify-between w-full">
            <p class="bg-gray-700 px-2 m-2 text-yellow-200">ISBN: <%=book.isbn%>
            </p>
            <p class="bg-red-800 px-2 m-2 text-yellow-200">Rs. <%=book.price%>/-</p>
          </div>
        </div>
      </div>

      <div>
        <form class="flex flex-col items-center gap-5" action="/update/<%=book._id%>" method="post">
          <div class="flex flex-col gap-2 font-semibold">
            <label class="text-gray-600">Poster</label>
            <input class="w-[30vw] border-2 px-4 py-2 rounded focus:outline-none focus:ring-0 focus:border-purple-700"
              type="text" placeholder="Past poster URL" name="poster" value="<%=book.poster %>">
          </div>
          <div class="flex flex-col gap-2 font-semibold">
            <label class="text-gray-600">Title Of The Book</label>
            <input class="w-[30vw] border-2 px-4 py-2 rounded focus:outline-none focus:ring-0 focus:border-purple-700"
              type="text" placeholder="Past poster URL" name="booktitle" value="<%=book.booktitle %>">
          </div>
          <div class="flex flex-col gap-2 font-semibold">
            <label>Book name</label>
            <input class="w-[30vw] border-2 px-4 py-2 rounded focus:outline-none focus:ring-0 focus:border-purple-700"
              type="text" placeholder="Enter book name" name="bookname" value="<%=book.bookname %>">
          </div>
          <div class="flex flex-col gap-2 font-semibold">
            <label>Author name</label>
            <input class="w-[30vw] border-2 px-4 py-2 rounded focus:outline-none focus:ring-0 focus:border-purple-700"
              type="text" placeholder="Enter author name" name="authorname" value="<%=book.authorname %>">
          </div>
          <div class="flex flex-col gap-2 font-semibold">
            <label>Book ISBN No.</label>
            <input class="w-[30vw] border-2 px-4 py-2 rounded focus:outline-none focus:ring-0 focus:border-purple-700"
              type="text" placeholder="Ex-12d34j54n3" name="isbn" value="<%=book.isbn %>">
          </div>
          <div class="flex flex-col gap-2 font-semibold">
            <label>Price</label>
            <input class="w-[30vw] border-2 px-4 py-2 rounded focus:outline-none focus:ring-0 focus:border-purple-700"
              type="text" placeholder="Enter book amount" name="price" value="<%=book.price %>">
          </div>

          <div class="flex flex-col gap-2 font-semibold">
            <label>Description</label>
            <textarea
              class="w-[30vw] border-2 px-4 py-2 rounded focus:outline-none focus:ring-0 focus:border-purple-700"
              type="text" name="description" placeholder="Enter about book...."
              rows="6"><%=book.description %>"</textarea>
          </div>

          <div>
            <button
              class="bg-purple-600 text-white font-semibold rounded w-[30vw] hover:bg-purple-500 py-2">Update</button>
          </div>
          <a href="/delete/<%=book._id%>" class="bg-red-600 hover:bg-red-500 text-white font-semibold text-center w-[30vw] py-2 rounded">
           Delete
          </a>
        </form>
      </div>

    </div>


    <%- include("partials/footer") %>